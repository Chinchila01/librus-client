<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/md_grey_200">

    <TextView
        android:id="@+id/list_subheader_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/list_subheader_done"
        android:fontFamily="sans-serif"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="Ten miesiÄ…c"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/md_divider_black" />

    <ImageView
        android:id="@+id/list_subheader_done"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="8dp"
        android:tint="@color/iconDark"
        app:srcCompat="@drawable/ic_done_all_black_48dp"
        android:layout_width="48dp" />
</RelativeLayout>