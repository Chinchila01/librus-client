<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?attr/defaultBackgroundColor"
    android:elevation="?attr/lessonItemElevation"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/missing_lesson_item_lesson_number"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:maxLength="1"
        android:text="@string/placeholder_lesson_number"
        android:textColor="?android:attr/textColorTertiary"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/missing_lesson_item_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        android:text="Okienko"
        android:textSize="14sp"
        android:textStyle="italic" />


</LinearLayout>
